<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/progressBar_2"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="회원가입"
        android:textSize="25sp"
        android:id="@+id/tvResisterTitle"/>

    <TextView
        android:id="@+id/tvResisterID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. 이메일 아이디를 입력해주세요."
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tvResisterTitle"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="35dp"
        tools:layout_editor_absoluteY="275dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvResisterID"
        android:inputType="textEmailAddress"
        android:hint="ex) mungtaengi1007@naver.com"
        android:id="@+id/etResisterID"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="35dp"
        app:layout_constraintTop_toBottomOf="@+id/etResisterID"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:text="2. 사용할 비밀번호를 입력해주세요"
        android:id="@+id/tvResisterPassWord"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvResisterPassWord"
        android:inputType="textPassword"
        android:id="@+id/etResisterPassWord"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResisterPassWord"
        android:layout_marginTop="50dp"
        android:id="@+id/btRegisterFinish"
        android:text="등록!"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btRegisterFinish"
        android:layout_marginTop="30dp"
        android:id="@+id/btSkipResister"
        android:text="건너뛰기 (개발자)"/>






</androidx.constraintlayout.widget.ConstraintLayout>